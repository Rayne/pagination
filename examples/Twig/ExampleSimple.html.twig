{##
 # This is a simple pagination macro for Twig and Bootstrap Framework.
 # It highlights the current page and doesn't hide redundant pagination controls (first, previous, next and last).
 #
 # @param array p Result of SearchPagination::toArray()
 # @param string uri Optional URI used as prefix: {{ uri }}?page={{ page }}
 #}
{% macro pagination(p, uri) %}
	<ul class="pagination">
		<li><a href="{{ uri|default() }}?page={{ p.first }}">
			<span class="glyphicon glyphicon-fast-backward"></span>
			<span class="sr-only">First</span>
		</a></li>

		<li><a href="{{ uri|default() }}?page={{ p.previous }}">
			<span class="glyphicon glyphicon-step-backward"></span>
			<span class="sr-only">Previous</span>
		</a></li>

		{% for i in p.begin..p.end %}
			<li{{ p.page == i ? ' class="active"' }}><a href="{{ uri|default() }}?page={{ i }}">{{ i }}</a></li>
		{% endfor %}

		<li><a href="{{ uri|default() }}?page={{ p.next }}">
			<span class="glyphicon glyphicon-step-forward"></span>
			<span class="sr-only">Next</span>
		</a></li>

		<li><a href="{{ uri|default() }}?page={{ p.last }}">
			<span class="glyphicon glyphicon-fast-forward"></span>
			<span class="sr-only">Last</span>
		</a></li>
	</ul>
{% endmacro %}
